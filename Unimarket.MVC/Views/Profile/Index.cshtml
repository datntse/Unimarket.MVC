@{
    ViewData["Title"] = "Profile Page";
}
<style>
    .list-group-item {
        font-weight: bold;
    }

    .col-form-label {
        font-weight: bold;
    }

    .card {
        border: 1px solid rgba(253,176,16, 0.9)
    }

    .btn-custom {
        background-color: #FFA500; /* Orange background */
        color: white; /* White text */
        border-radius: 50px; /* Rounded corners */
        border: none; /* Remove border */
        padding: 10px 20px; /* Padding for the button */
        font-size: 16px; /* Font size */
        font-weight: bold; /* Bold text */
    }

        .btn-custom:hover {
            background-color: #ff9400; /* Slightly darker orange on hover */
            color: white;
        }

    .form-control {
        border-radius: 5rem; /* Rounded corners for the form group */
    }

    .custom-button {
        display: inline-block;
        padding: 5px 10px;
        font-size: 16px;
        color: orange;
        border: 2px solid orange;
        border-radius: 25px;
        text-align: center;
        text-decoration: none;
        cursor: pointer;
        margin-top: 5px;
    }

        .custom-button:hover {
            background-color: orange;
            color: white;
        }

    .custom-file-input {
        display: none;
    }

    .profile-image-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100%;
    }

        .profile-image-container img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
        }
</style>

<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="@Url.Action("Index","Home")"><i class="fa fa-home"></i> Trang chủ</a></i>
                    <span>Tài Khoản</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            <div class="row">
                <div class="col-lg-3">
                    <div class="list-group">
                        <a href="@Url.Action("Index")" class="list-group-item list-group-item-action" style="background-color: rgba(253,176,16, 0.8)"><i class="fas fa-user-edit"></i> Thông tin cá nhân</a>
                        <a href="@Url.Action("OrderHistory")" class="list-group-item list-group-item-action">Lịch sử đơn hàng</a>
                        <a href="#" class="list-group-item list-group-item-action">Log-out</a>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Account Settings</h5>
                            <form>
                                <div class="form-group row">
                                    <div class="col-sm-3 profile-image-container">
                                        <img src="~/img/avatar.png" alt="Profile Image" id="profileImagePreview">
                                        <button type="button" class="custom-button" onclick="document.getElementById('profileImage').click()">Choose Image</button>
                                        <input type="file" class="custom-file-input" id="profileImage" style="display: none;" onchange="previewImage(event)">
                                    </div>
                                    <div class="col-sm-9">
                                        <div class="form-group row">
                                            <label for="name" class="col-sm-3 col-form-label">Name</label>
                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" id="name" value="Dianne">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="studentID" class="col-sm-3 col-form-label">Student ID</label>
                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" id="studentID" value="SE160000">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="email" class="col-sm-3 col-form-label">Email</label>
                                            <div class="col-sm-9">
                                                <input type="email" class="form-control" id="email" value="dianne.russell@gmail.com">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="phoneNumber" class="col-sm-3 col-form-label">Phone Number</label>
                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" id="phoneNumber" value="(603) 555-0123">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-10 offset-sm-3">
                                        <button type="submit" class="btn btn-custom">Save Changes</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="card" style="margin-top:10px;">
                        <div class="card-body">
                            <h5 class="card-title">Billing Address</h5>
                            <form>
                                <div class="form-group row">
                                    <div class="form-group col-md-6">
                                        <label class="col-form-label" for="firstName">First Name</label>
                                        <input type="text" class="form-control" id="firstName" value="Dianne">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label class="col-form-label" for="lastName">Last Name</label>
                                        <input type="text" class="form-control" id="lastName" value="Dianne">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label class="col-form-label" for="companyName">Company Name (optional)</label>
                                        <input type="text" class="form-control" id="companyName" value="Zakirsoft">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label class="col-form-label" for="streetAddress">Street Address</label>
                                        <input type="text" class="form-control" id="streetAddress" value="4140 Parl">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-4">
                                        <label class="col-form-label" for="country">Country / Region</label>
                                        <select id="country" class="form-control">
                                            <option selected>United States</option>
                                            <option>...</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label class="col-form-label" for="state">State</label>
                                        <select id="state" class="form-control">
                                            <option selected>TPHCM</option>
                                            <option>...</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label class="col-form-label" for="zip">Zip Code</label>
                                        <input type="text" class="form-control" id="zip" value="20033">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label class="col-form-label" for="email">Email</label>
                                        <input type="email" class="form-control" id="email" value="dianne.russell@gmail.com" readonly>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label class="col-form-label" for="phone">Phone</label>
                                        <input type="text" class="form-control" id="phone" value="(603) 555-0123" readonly>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-custom">Save Changes</button>
                            </form>
                        </div>
                    </div>
                    <div class="card" style="margin-top:10px;">
                        <div class="card-body">
                            <h5 class="card-title">Change Passwoord</h5>
                            <form>
                                <div class="form-group row">
                                    <div class="form-group col-md-12">
                                        <label class="col-form-label" for="currentPassword">Current Password</label>
                                        <input type="password" class="form-control" id="currentPassword">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label class="col-form-label" for="newPassword">New Password</label>
                                        <input type="password" class="form-control" id="newPassword">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label class="col-form-label" for="confirmPassword">Confirm Password</label>
                                        <input type="password" class="form-control" id="confirmPassword">
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-custom">Change Password</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

